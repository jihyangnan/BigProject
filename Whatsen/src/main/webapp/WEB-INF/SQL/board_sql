CREATE TABLE rw_board(
  rw_No NUMBER PRIMARY KEY NOT NULL,
  rw_Order NUMBER , 
  rw_Content CLOB NOT NULL, 
  rw_Id VARCHAR2(50), 
  rw_Date DATE NOT NULL, 
  rw_bNo NUMBER REFERENCES ws_board(b_No), 
  group_id NUMBER,
  group_tab NUMBER,
  group_step NUMBER,
  root NUMBER,
  depth NUMBER
);
select * from ws_board;
select * from ws_Word;
